<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/imageViewPlant"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:contentDescription="Uploaded Plant Image"
        android:layout_marginBottom="16dp" />

    <!-- Tab Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonPlantInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식물 정보"
            android:layout_margin="8dp"
            android:backgroundTint="#E8E8E8"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonGrowthInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보 갱신"
            android:layout_margin="8dp"
            android:backgroundTint="#E8E8E8"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonPlantJournal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식물 일지"
            android:layout_margin="8dp"
            android:backgroundTint="#E8E8E8"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Plant Information -->
    <TextView
        android:id="@+id/textViewPlantSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식물 품종: 계산 중..."
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewConfidence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식별 신뢰도: 계산 중..."
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/textViewPlantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식물 이름: (nickname)"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="적정 온도: 23~25 C"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="적정 습도: 30~60 %"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000" />

    <!-- Analysis Result -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분석 결과"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewWateringInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물주기: 계산 중..."
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewGrowthData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신장: 계산 중..."
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>


    <!-- Back Button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로 가기"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E8E8E8"
        android:textColor="#000000" />
</LinearLayout>
